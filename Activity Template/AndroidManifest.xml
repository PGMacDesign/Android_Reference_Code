<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pgmacdesign.test3"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
		<!-- First is the splash screen -->
        <activity
            android:name="com.pgmacdesign.test3.Splash"
            android:label="@string/app_name" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        
        
        <!-- Second activity, which is the main menu -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
 
        </activity>
        
        
        <!-- This activity is for shared preferences-->
        <activity       
            android:name=".SharedPrefs"
            android:label="SharedPrefs"  >
  
        </activity>
        
        

    </application>

</manifest>

